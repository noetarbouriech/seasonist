{
  "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
  "version": 3,
  "name": "Seasonist API Gateway",
  "port": 8080,
  "timeout": "3000ms",
  "endpoints": [
    {
      "@comment": "List companies",
      "endpoint": "/api/companies",
      "method": "GET",
      "backend": [
        {
          "host": ["http://companies-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "listCompanies",
              "query_path": "/graphql/companies/list.graphql"
            }
          }
        }
      ]
    },
    {
      "@comment": "Create company",
      "endpoint": "/api/companies",
      "method": "POST",
      "backend": [
        {
          "host": ["http://companies-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "mutation",
              "operationName": "addCompany",
              "query_path": "/graphql/companies/create.graphql",
              "variables": {
                "companyAddress": "default",
                "companyName": "default"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Find a company",
      "endpoint": "/api/companies/{id}",
      "method": "GET",
      "backend": [
        {
          "host": ["http://companies-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "findCompanyById",
              "query_path": "/graphql/companies/find.graphql",
              "variables": {
                "companyId": "{id}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Update company",
      "endpoint": "/api/companies",
      "method": "PATCH",
      "backend": [
        {
          "host": ["http://companies-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "mutation",
              "operationName": "updateCompany",
              "query_path": "/graphql/companies/update.graphql",
              "variables": {
                "companyId": "default",
                "companyAddress": "default",
                "companyName": "default"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Delete company",
      "endpoint": "/api/companies/{id}",
      "method": "DELETE",
      "backend": [
        {
          "host": ["http://companies-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "deleteCompany",
              "query_path": "/graphql/companies/delete.graphql",
              "variables": {
                "id": "{id}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Register a user",
      "endpoint": "/api/auth/register",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "encoding": "no-op",
          "host": ["http://users-api:8080"],
          "url_pattern": "/auth/register"
        }
      ]
    },
    {
      "@comment": "Find the user's profile",
      "endpoint": "/api/users/me",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/seasonist/protocol/openid-connect/certs",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "backend": [
        {
          "host": ["http://users-api:8080"],
          "url_pattern": "/graphql?timeout=4s&userId={JWT.sub}",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "getById",
              "query_path": "/graphql/users/get-by-id.graphql",
              "variables": {
                "userId": "{JWT.sub}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Find a user by id",
      "endpoint": "/api/users/{id}",
      "method": "GET",
      "backend": [
        {
          "host": ["http://users-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "getById",
              "query_path": "/graphql/users/get-by-id.graphql",
              "variables": {
                "userId": "{id}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Find a user by email",
      "endpoint": "/api/users/emails/{email}",
      "method": "GET",
      "backend": [
        {
          "host": ["http://users-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "query",
              "operationName": "getByEmail",
              "query_path": "/graphql/users/get-by-email.graphql",
              "variables": {
                "email": "{email}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Update user's information",
      "endpoint": "/api/users/me/information",
      "method": "PATCH",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/seasonist/protocol/openid-connect/certs",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "backend": [
        {
          "host": ["http://users-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "mutation",
              "operationName": "updateUserInformation",
              "query_path": "/graphql/users/update-information.graphql",
              "variables": {
                "userId": "{JWT.sub}"
              }
            }
          }
        }
      ]
    },
    {
      "@comment": "Update user's availability",
      "endpoint": "/api/users/me/availability",
      "method": "PATCH",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/seasonist/protocol/openid-connect/certs",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "backend": [
        {
          "host": ["http://users-api:8080"],
          "url_pattern": "/graphql?timeout=4s",
          "timeout": "4100ms",
          "extra_config": {
            "backend/graphql": {
              "type": "mutation",
              "operationName": "updateUserAvailability",
              "query_path": "/graphql/users/update-availability.graphql",
              "variables": {
                "userId": "{JWT.sub}"
              }
            }
          }
        }
      ]
    }
  ],
  "sequential_start": true,
  "async_agent": [],
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": true,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "CONNECT",
        "OPTIONS",
        "TRACE",
        "PATCH"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_credentials": true
    }
  },
  "output_encoding": "json",
  "debug_endpoint": false
}
